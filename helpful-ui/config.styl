/**
 * "Globals" are configuration settings that are not specific to any
 * one module and can therefore safely be used by any module.
 *
 * -------------------------------------------------------------------
 */

$hui = merge({

  /**
   * GLOBAL BASE SIZE
   *
   * This is the default sizes that other sizes will by divided by
   * to find the correct EM.
   */
  font-size: 16px

  /**
   * ENFORCE HEIGHT
   *
   * If you want to be able to use 100% on the window size, set this
   * to true.
   */
  enforce-height: true

  /**
   * ENFORCE SCROLL BAR
   *
   * Forces a vertical scroll bar be added to help prevent the page from
   * being jumpy when page height dynamically change.
   */
  enforce-scroll-bar: true

  /*
   * IE SUPPORT
   *
   * Whether or not IE (8+) should specifically be supported.
   */
  ie-support: true

  /*
   * VENDOR PREFIXES
   *
   * What vendor prefixes will be applied to vendor helper functions.
   */
  vendor-prefixes: webkit moz o ms official

  /**
   * PREFERRED UNIT TYPE
   *
   * Through the use of transparent rule functions, an attempt to convert
   * the given units to the preferred type automatically. Simply set this
   * to false to disable or choose one of the following: px, em, rem
   */
  preferred-unit: em

  /**
   * SELECTOR FORMATS
   *
   * The formatting rules for the different types of selectors.  Set to
   * match Helpful UI's standard by default.
   */
  formats: {
    component: '%s .%s'
    part: '%s__%s'
    modifier: '%s.\+%s'
    state: '%s.is-%s'
    context: '%s.as-%s'
  }

  /**
   * MEDIA QUERY SIZES
   *
   * The media query breakpoints
   */
  breakpoints: {
    xs: unit(320px / 16, 'em')
    sm: unit(480px / 16, 'em')
    md: unit(768px / 16, 'em')
    lg: unit(1024px / 16, 'em')
    xl: unit(1146px / 16, 'em')
  }

  /**
   * COLORS
   */
  colors: {
    gray: {
      light: #EEE
      mid: #555
      dark: #222
    }
    primary: {
      mid: #673AB7
    }
    accent: {
      mid: false
    }
    success: {
      mid: #8BC34A
    }
    error: {
      mid: #F44336
    }
  }

  /**
   * FONTS
   *
   * These are the fonts which will be used by the other modules.
   */
  fonts: {
    primary: unquote("'Helvetica Neue', Arial, sans-serif")
    headings: inherit
    code: unquote("'Monaco', Courier New, monospace")
  }

}, $hui)

/**
 * SHARED CONTROL SETTINGS
 *
 * These are settings related to control elements like inputs, textareas
 * and buttons.
 */
$hui.control = merge({
  font-size: $hui.font-size
  height: 32px
  background: #fff
  color: inherit
  border-style: solid
  border-width: 1px
  border-color: #EEE
  border-radius: 2px
  box-shadow: none
}, $hui.control)

/**
 * If no accent color has been defined, make one using Stylus'
 * "complement()" method
 */
unless $hui.colors.accent.mid
  $hui.colors.accent.mid = complement($hui.colors.primary.mid)

/**
 * If light and dark color ranges haven't been explicitly set, generate some
 * nice alternatives.
 */
for $_hui-k, $_hui-v in $hui.colors
  unless $_hui-v.light
    $_hui-v.light = lighten($_hui-v.mid, 40%)
  unless $_hui-v.dark
    $_hui-v.dark = darken($_hui-v.mid, 40%)
