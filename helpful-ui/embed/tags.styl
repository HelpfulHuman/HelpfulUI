@require 'options'
@require '../helpers/selectors'
@require '../helpers/aspect-ratio'

{component($hui.embed.selector)}
  position relative
  width 100%
  height auto
  aspect-ratio 4 3

  for $_hui-k, $_hui-v in $hui.embed.options
    {modifier($_hui-k)}
      aspect-ratio $_hui-v

  img, embed, object, video
    position absolute
    top 0
    left 0
    width 100%
    height 100%
