@require 'options'
@require '../helpers/text-overflow'
@require '../helpers/selectors'
@require '../helpers/rules'

{component($hui.dropdown.selector)}
  for $_hui-k, $_hui-v in $hui.dropdown.variants
    if $_hui-k is 'default'
      rules($_hui-v, ('&:disabled' '&:focus'))

      {state('focused')}
        rules($_hui-v['&:focus'])

      {state('disabled')}
        rules($_hui-v['&:disabled'])

    else
      {modifier($_hui-k)}
        rules($_hui-v, ('&:disabled' '&:focus'))

        {state('focused')}
          rules($_hui-v['&:focus'])

        {state('disabled')}
          rules($_hui-v['&:disabled'])

  &:before
    rules($hui.dropdown.arrow)

  select
    display block
    position relative
    margin 0
    padding-left 1em
    padding-right @padding-left
    color inherit
    background transparent
    border 0
    width 100%
    height 100%
    text-overflow ''
    cursor pointer
    z-index 2

    &::-ms-expand
      display none
