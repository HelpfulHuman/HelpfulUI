@require '../config'

$hui.grid = merge({

  /**
   * ENABLE
   *
   * Enables the module and features when set to "true".
   */
  enabled: true

  /**
   * GRID SELECTOR
   *
   * Change the selector name for the grid component.
   */
  grid-selector: 'grid'

  /**
   * COLUMN SELECTOR
   *
   * Change the selector name for the column component.
   */
  column-selector: 'col'

  /**
   * COLUMNS
   *
   * The total number of columns to use in this grid.
   */
  columns: 12

  /**
   * GUTTER DEFAULT
   *
   * The default gutter size to use.
   */
  gutter-size: {
    default: 30px
  }

}, $hui.grid)

/**
 * Generate multiple gutter sizes based on breakpoints.
 */
$hui.grid.gutter-size = merge({
  xs: $hui.grid.gutter-size.default / 3
  sm: $hui.grid.gutter-size.default / 2
  md: $hui.grid.gutter-size.default
  lg: $hui.grid.gutter-size.default
  xl: $hui.grid.gutter-size.default
}, $hui.grid.gutter-size)
