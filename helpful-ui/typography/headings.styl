  color $theme__heading-3-color

h4, .h4
  font-size pref($theme__heading-4-font-size)
  line-height $theme__heading-4-line-height $theme__heading-4-font-size
  font-weight $theme__heading-4-font-weight
  font-style $theme__heading-4-font-style
  color $theme__heading-4-color

h5, .h5
  font-size pref($theme__heading-5-font-size)
  line-height $theme__heading-5-line-height $theme__heading-5-font-size
