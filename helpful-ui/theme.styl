/**
 * "Theme" settings are similar to global settings in that they can be
 * used by any module.  However, these are to be used for brand specific
 * thins like fonts and colors.
 *
 * -------------------------------------------------------------------
 */

@require 'globals'

/**
 * COLORS
 */
$theme__gray-color-300           ?= #9e9e9e
$theme__gray-color-100           ?= lighten($theme__gray-color-300, 40%)
$theme__gray-color-200           ?= lighten($theme__gray-color-300, 20%)
$theme__gray-color-400           ?= darken($theme__gray-color-300, 20%)
$theme__gray-color-500           ?= darken($theme__gray-color-300, 40%)

$theme__brand-color-300          ?= #673AB7
$theme__brand-color-100          ?= lighten($theme__brand-color-300, 40%)
$theme__brand-color-200          ?= lighten($theme__brand-color-300, 20%)
$theme__brand-color-400          ?= darken($theme__brand-color-300, 20%)
$theme__brand-color-500          ?= darken($theme__brand-color-300, 40%)

$theme__accent-color-300         ?= #607D8B
$theme__accent-color-100         ?= lighten($theme__accent-color-300, 40%)
$theme__accent-color-200         ?= lighten($theme__accent-color-300, 20%)
$theme__accent-color-400         ?= darken($theme__accent-color-300, 20%)
$theme__accent-color-500         ?= darken($theme__accent-color-300, 40%)

$theme__success-color-200        ?= #8BC34A
$theme__success-color-100        ?= lighten($theme__success-color-200, 25%)
$theme__success-color-300        ?= darken($theme__success-color-200, 25%)

$theme__error-color-200          ?= #F44336
$theme__error-color-100          ?= lighten($theme__error-color-200, 25%)
$theme__error-color-300          ?= darken($theme__error-color-200, 25%)

$theme__muted-text-color         ?= $theme__gray-color-300
$theme__body-text-color          ?= $theme__gray-color-400
$theme__link-text-color          ?= $theme__brand-color-300

/**
 * SLECTION
 * Changes the colors for selected text.
 */
$theme__selection-color          ?= #fff
$theme__selection-background     ?= alpha($theme__brand-color-400, 0.7)

/**
 * BODY BACKGROUND
 * Sets the background style for the body.
 */
$theme__background              ?= #fff

/**
 * SHARED CONTROL SETTINGS
 * These are settings related to control elements like inputs, textareas
 * and buttons.
 */
$theme__control-height          ?= 32px
$theme__control-background      ?= #fff
$theme__control-color           ?= $theme__body-text-color
$theme__control-radius          ?= 2px
$theme__control-shadow          ?= none
$theme__control-border-color    ?= $theme__gray-color-200
$theme__control-border-width    ?= 1px

/**
 * RULES
 * These are for horizontal (and vertical, if you add them) rules.
 */
$theme__rule-width               ?= 1px
$theme__rule-color               ?= $theme__gray-color-100

/**
 * FONTS
 */
$theme__font-paragraph           ?= 'Helvetica Neue', Helvetica, Arial, sans-serif
$theme__font-anthology           ?= $theme__font-paragraph
$theme__font-monospaced          ?= monospace, sans-serif
$theme__line-height              ?= 1.45

/**
 * HEADINGS
 */
$theme__heading-1-font-size      ?= 50px
$theme__heading-1-line-height    ?= 1
$theme__heading-1-font-weight    ?= 200
$theme__heading-1-font-style     ?= normal
$theme__heading-1-color          ?= $theme__gray-color-500

$theme__heading-2-font-size      ?= 37px
$theme__heading-2-line-height    ?= 1.125
$theme__heading-2-font-weight    ?= 500
$theme__heading-2-font-style     ?= normal
$theme__heading-2-color          ?= $theme__gray-color-500

$theme__heading-3-font-size      ?= 28px
$theme__heading-3-line-height    ?= 1.125
$theme__heading-3-font-weight    ?= 500
$theme__heading-3-font-style     ?= normal
$theme__heading-3-color          ?= $theme__gray-color-500

$theme__heading-4-font-size      ?= 21px
$theme__heading-4-line-height    ?= 1.25
$theme__heading-4-font-weight    ?= 500
$theme__heading-4-font-style     ?= normal
$theme__heading-4-color          ?= $theme__gray-color-500

$theme__heading-5-font-size      ?= 16px
$theme__heading-5-line-height    ?= 1.4
$theme__heading-5-font-weight    ?= 500
$theme__heading-5-font-style     ?= normal
$theme__heading-5-color          ?= $theme__gray-color-500

$theme__heading-6-font-size      ?= 12px
$theme__heading-6-line-height    ?= 1.45
$theme__heading-6-font-weight    ?= 500
$theme__heading-6-font-style     ?= normal
$theme__heading-6-color          ?= $theme__gray-color-500
