@require '../theme'

$table = merge({

  /**
   * ENABLE
   *
   * Enables the module and features when set to "true".
   */
  enabled: true

  /**
   * STYLES
   *
   * The styles for the table and its
   */
  styles: {
    table: {
      display: table
      border-collapse: collapse
      border-spacing: 0
      border: 0
      color: inherit
    }

    tr: {
      display: table-row
      background: transparent
    }

    'th, td': {
      display: table-cell
      text-align: center

      '&:first-child': {
        text-align: left
      }

      '&:last-child': {
        text-align: right
      }
    }

    th: {
      font-weight: bold
      vertical-align: bottom
    }

    td: {
      font-weight: normal
      vertical-align: top
    }
  }

}, $table)
