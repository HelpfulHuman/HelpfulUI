@require '../globals'

/**
 * Adds the before and after selectors needed for the clearfix hack.
 */
clearfix()
  if $global__ie-support
    zoom 1

  &:before,
  &:after
    content " "
    display table

  &:after
    clear both

/**
 * Enables new rule values like "children" to be used.
 */
clear()
  if arguments[0] is children
    clearfix()
  else
    clear arguments
